                </div>
            `;
        }

        // Update category rankings
        function updateCategoryRankings() {
            const categoryRankings = document.getElementById('categoryRankings');
            if (!categoryRankings) return;
            
            const categories = [
                { key: 'pbb', name: 'PBB', icon: 'üéñÔ∏è' },
                { key: 'emponempon', name: 'Empon-empon', icon: 'üåø' },
                { key: 'sejarah', name: 'Sejarah', icon: 'üìö' },
                { key: 'pengetahuan', name: 'Pengetahuan', icon: 'üß†' },
                { key: 'makam', name: 'Makam', icon: 'üïäÔ∏è' },
                { key: 'outbond', name: 'Outbond', icon: 'üèÉ' },
                { key: 'posinduk', name: 'Pos Induk', icon: 'üè†' }
            ];

            categoryRankings.innerHTML = '';

            categories.forEach(category => {
                const categoryTeams = [];
                
                for (let i = 0; i < 6; i++) {
                    categoryTeams.push({
                        team: i + 1,
                        score: scores[category.key][i]
                    });
                }
                
                // Sort by category score (descending)
                categoryTeams.sort((a, b) => b.score - a.score);
                
                const categoryCard = document.createElement('div');
                categoryCard.className = 'bg-gray-50 rounded-lg p-4';
                
                let rankingList = '';
                categoryTeams.forEach((team, index) => {
                    let rankClass = '';
                    let medal = '';
                    
                    if (index === 0) {
                        rankClass = 'text-yellow-600 font-bold';
                        medal = 'ü•á';
                    } else if (index === 1) {
                        rankClass = 'text-gray-600 font-bold';
                        medal = 'ü•à';
                    } else if (index === 2) {
                        rankClass = 'text-orange-600 font-bold';
                        medal = 'ü•â';
                    }
                    
                    rankingList += `
                        <div class="flex justify-between items-center py-1 ${rankClass}">
                            <span>${medal} ${index + 1}. Tim ${team.team}</span>
                            <span class="font-bold">${team.score}</span>
                        </div>
                    `;
                });
                
                categoryCard.innerHTML = `
                    <div class="text-center mb-3">
                        <div class="text-2xl mb-1">${category.icon}</div>
                        <h3 class="font-bold text-gray-700">${category.name}</h3>
                    </div>
                    <div class="space-y-1">
                        ${rankingList}
                    </div>
                `;
                
                categoryRankings.appendChild(categoryCard);
            });
        }

        // Update competition statistics
        function updateCompetitionStats(teams) {
            const competitionStats = document.getElementById('competitionStats');
            if (!competitionStats) return;
            
            // Calculate statistics
            const totalScores = teams.map(team => team.total);
            const highestScore = Math.max(...totalScores);
            const lowestScore = Math.min(...totalScores);
            const averageScore = Math.round(totalScores.reduce((a, b) => a + b, 0) / totalScores.length);
            const scoreDifference = highestScore - lowestScore;
            
            // Find leading team
            const leadingTeam = teams[0];
            
            // Find most competitive category (smallest score difference)
            const categories = ['pbb', 'emponempon', 'sejarah', 'pengetahuan', 'makam', 'outbond', 'posinduk'];
            let mostCompetitiveCategory = '';
            let smallestDifference = Infinity;
            
            categories.forEach(category => {
                const categoryScores = [];
                for (let i = 0; i < 6; i++) {
                    categoryScores.push(scores[category][i]);
                }
                const max = Math.max(...categoryScores);
                const min = Math.min(...categoryScores);
                const diff = max - min;
                
                if (diff < smallestDifference) {
                    smallestDifference = diff;
                    mostCompetitiveCategory = category;
                }
            });
            
            const categoryNames = {
                'pbb': 'PBB',
                'emponempon': 'Empon-empon',
                'sejarah': 'Sejarah',
                'pengetahuan': 'Pengetahuan',
                'makam': 'Makam',
                'outbond': 'Outbond',
                'posinduk': 'Pos Induk'
            };
            
            competitionStats.innerHTML = `
                <div class="bg-gradient-to-br from-yellow-100 to-yellow-200 rounded-lg p-4 text-center">
                    <div class="text-2xl mb-2">üèÜ</div>
                    <div class="text-sm text-gray-600 mb-1">Tim Terdepan</div>
                    <div class="font-bold text-lg text-yellow-800">Tim ${leadingTeam.team}</div>
                    <div class="text-sm text-yellow-700">${leadingTeam.total} poin</div>
                </div>
                
                <div class="bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg p-4 text-center">
                    <div class="text-2xl mb-2">üìä</div>
                    <div class="text-sm text-gray-600 mb-1">Skor Rata-rata</div>
                    <div class="font-bold text-lg text-blue-800">${averageScore}</div>
                    <div class="text-sm text-blue-700">poin</div>
                </div>
                
                <div class="bg-gradient-to-br from-green-100 to-green-200 rounded-lg p-4 text-center">
                    <div class="text-2xl mb-2">‚öîÔ∏è</div>
                    <div class="text-sm text-gray-600 mb-1">Selisih Skor</div>
                    <div class="font-bold text-lg text-green-800">${scoreDifference}</div>
                    <div class="text-sm text-green-700">poin</div>
                </div>
                
                <div class="bg-gradient-to-br from-purple-100 to-purple-200 rounded-lg p-4 text-center">
                    <div class="text-2xl mb-2">üî•</div>
                    <div class="text-sm text-gray-600 mb-1">Kategori Terketat</div>
                    <div class="font-bold text-sm text-purple-800">${categoryNames[mostCompetitiveCategory]}</div>
                    <div class="text-xs text-purple-700">selisih ${smallestDifference} poin</div>
                </div>
            `;
        }

        // Update specific standings table
        function updateStandingsTable(tableId, teams) {
            const tbody = document.getElementById(tableId);
            tbody.innerHTML = '';

            teams.forEach((team, index) => {
                const row = document.createElement('tr');
                row.className = index % 2 === 0 ? 'bg-gray-50' : 'bg-white';
                
                // Add gold, silver, bronze styling for top 3
                let rankClass = '';
                if (index === 0) rankClass = 'bg-yellow-100 text-yellow-800 font-bold';
                else if (index === 1) rankClass = 'bg-gray-100 text-gray-800 font-bold';
                else if (index === 2) rankClass = 'bg-orange-100 text-orange-800 font-bold';

                row.innerHTML = `
                    <td class="px-4 py-3 text-center font-bold ${rankClass}">${index + 1}</td>
                    <td class="px-4 py-3 text-center font-bold">Tim ${team.team}</td>
                    <td class="px-4 py-3 text-center">${team.pbb}</td>
                    <td class="px-4 py-3 text-center">${team.emponempon}</td>
                    <td class="px-4 py-3 text-center">${team.sejarah}</td>
                    <td class="px-4 py-3 text-center">${team.pengetahuan}</td>
                    <td class="px-4 py-3 text-center">${team.makam}</td>
                    <td class="px-4 py-3 text-center">${team.outbond}</td>
                    <td class="px-4 py-3 text-center">${team.posinduk}</td>
                    <td class="px-4 py-3 text-center font-bold text-red-600">${team.total}</td>
                `;
                tbody.appendChild(row);
            });
        }

        // Update pos standings
        function updatePosStandings() {
            updateStandingsTable('posStandingsTable', getTeamsData());
        }

        // Get teams data
        function getTeamsData() {
            const teams = [];
            
            for (let i = 0; i < 6; i++) {
                const total = scores.pbb[i] + scores.emponempon[i] + scores.sejarah[i] + 
                             scores.pengetahuan[i] + scores.makam[i] + scores.outbond[i] + scores.posinduk[i];
                
                teams.push({
                    team: i + 1,
                    pbb: scores.pbb[i],
                    emponempon: scores.emponempon[i],
                    sejarah: scores.sejarah[i],
                    pengetahuan: scores.pengetahuan[i],
                    makam: scores.makam[i],
                    outbond: scores.outbond[i],
                    posinduk: scores.posinduk[i],
                    total: total
                });
            }

            return teams.sort((a, b) => b.total - a.total);
        }

        // Create chart
        function createChart(canvasId, chartVar) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            
            // Destroy existing chart if it exists
            if (chartVar === 'publicChart' && publicChart) {
                publicChart.destroy();
            } else if (chartVar === 'adminChart' && adminChart) {
                adminChart.destroy();
            } else if (chartVar === 'posChart' && posChart) {
                posChart.destroy();
            }

            const teams = getTeamsData();
            const labels = teams.map(team => `Tim ${team.team}`);
            const data = teams.map(team => team.total);

            const chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Total Skor',
                        data: data,
                        backgroundColor: 'rgba(220, 38, 38, 0.8)',
                        borderColor: 'rgba(220, 38, 38, 1)',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 1000,
                            ticks: {
                                stepSize: 100
                            }
                        }
                    }
                }
            });

            if (chartVar === 'publicChart') {
                publicChart = chart;
            } else if (chartVar === 'adminChart') {
                adminChart = chart;
            } else if (chartVar === 'posChart') {
                posChart = chart;
            }
        }

        // Update charts
        function updateCharts(teams) {
            const labels = teams.map(team => `Tim ${team.team}`);
            const data = teams.map(team => team.total);

            if (publicChart) {
                publicChart.data.labels = labels;
                publicChart.data.datasets[0].data = data;
                publicChart.update();
            }

            if (adminChart) {
                adminChart.data.labels = labels;
                adminChart.data.datasets[0].data = data;
                adminChart.update();
            }

            if (posChart) {
                posChart.data.labels = labels;
                posChart.data.datasets[0].data = data;
                posChart.update();
            }
        }

        // Refresh scores from cloud
        async function refreshScores() {
            const refreshButton = document.querySelector('button[onclick="refreshScores()"]');
            const originalText = refreshButton.textContent;
            
            refreshButton.textContent = 'Memuat...';
            refreshButton.disabled = true;
            
            await loadScores();
            updateStandings();
            
            refreshButton.textContent = originalText;
            refreshButton.disabled = false;
        }

        // Manual sync for admin
        async function manualSync() {
            const syncButton = document.querySelector('button[onclick="manualSync()"]');
            const syncStatus = document.getElementById('syncStatus');
            
            // Show loading
            syncButton.textContent = 'Menyinkronkan...';
            syncButton.disabled = true;
            syncStatus.className = 'mb-4 p-3 rounded text-center bg-blue-100 text-blue-700';
            syncStatus.textContent = 'Sedang menyinkronkan data ke Google Sheets...';
            syncStatus.classList.remove('hidden');
            
            // Perform sync
            const success = await syncToGoogleSheets();
            
            // Show result
            if (success) {
                syncStatus.className = 'mb-4 p-3 rounded text-center bg-green-100 text-green-700';
                syncStatus.innerHTML = 'Berhasil disinkronkan ke Google Sheets! <a href="https://docs.google.com/spreadsheets/d/1e-Y0ckHjVF04la-I4e0j-WgR10KXKMxZKI2ox__5fWs/edit?usp=sharing" target="_blank" class="text-blue-600 underline">Lihat Spreadsheet</a>';
            } else {
                syncStatus.className = 'mb-4 p-3 rounded text-center bg-red-100 text-red-700';
                syncStatus.textContent = 'Gagal menyinkronkan ke Google Sheets. Silakan coba lagi.';
            }
            
            // Reset button
            syncButton.textContent = 'Sync ke Google Sheets';
            syncButton.disabled = false;
            
            // Hide status after 5 seconds
            setTimeout(() => {
                syncStatus.classList.add('hidden');
            }, 5000);
        }

        // Reset all scores (admin only)
        async function resetAllScores() {
            if (confirm('Apakah Anda yakin ingin mereset semua skor? Tindakan ini tidak dapat dibatalkan!')) {
                scores = {
                    pbb: [0, 0, 0, 0, 0, 0],
                    emponempon: [0, 0, 0, 0, 0, 0],
                    sejarah: [0, 0, 0, 0, 0, 0],
                    pengetahuan: [0, 0, 0, 0, 0, 0],
                    makam: [0, 0, 0, 0, 0, 0],
                    outbond: [0, 0, 0, 0, 0, 0],
                    posinduk: [0, 0, 0, 0, 0, 0]
                };
                saveScoresToStorage();
                updateStandings();
                
                // Auto sync after reset
                await syncToGoogleSheets();
                alert('Semua skor telah direset dan disinkronkan ke Google Sheets!');
            }
        }

        // Copy data to clipboard for spreadsheet
        function copyToClipboard() {
            const teams = getTeamsData();
            let csvData = 'Peringkat,Tim,PBB,Empon-empon,Sejarah,Pengetahuan Umum,Makam,Outbond,Pos Induk,Total\n';
            
            teams.forEach((team, index) => {
                csvData += `${index + 1},Tim ${team.team},${team.pbb},${team.emponempon},${team.sejarah},${team.pengetahuan},${team.makam},${team.outbond},${team.posinduk},${team.total}\n`;
            });

            navigator.clipboard.writeText(csvData).then(() => {
                document.getElementById('copySuccess').classList.remove('hidden');
                setTimeout(() => {
                    document.getElementById('copySuccess').classList.add('hidden');
                }, 3000);
            });
        }

        // Logout
        function logout() {
            currentUser = null;
            document.getElementById('adminDashboard').classList.add('hidden');
            document.getElementById('posDashboard').classList.add('hidden');
            document.getElementById('posResults').classList.add('hidden');
            document.getElementById('publicDashboard').classList.remove('hidden');
            updateStandings();
        }

        // Initialize the application when page loads
        window.addEventListener('load', init);
