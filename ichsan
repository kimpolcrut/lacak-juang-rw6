    <script>
        // Data structure to store scores
        let scores = {
            pbb: [0, 0, 0, 0, 0, 0],
            emponempon: [0, 0, 0, 0, 0, 0],
            sejarah: [0, 0, 0, 0, 0, 0],
            pengetahuan: [0, 0, 0, 0, 0, 0],
            makam: [0, 0, 0, 0, 0, 0],
            outbond: [0, 0, 0, 0, 0, 0],
            posinduk: [0, 0, 0, 0, 0, 0]
        };

        // Load scores from localStorage and cloud
        async function loadScores() {
            // First try to load from cloud
            const cloudLoaded = await loadFromCloud();
            
            if (!cloudLoaded) {
                // Fallback to localStorage
                const savedScores = localStorage.getItem('lacakJuangScores');
                if (savedScores) {
                    scores = JSON.parse(savedScores);
                }
            }
            
            // Always save to localStorage for offline access
            saveScoresToStorage();
        }

        // Save scores to localStorage and cloud
        async function saveScoresToStorage() {
            // Save to localStorage
            localStorage.setItem('lacakJuangScores', JSON.stringify(scores));
            
            // Save to cloud storage
            await saveToCloud();
        }

        // Cloud storage configuration
        const CLOUD_STORAGE = {
            binId: '676a8e5ead19ca34f8c8f8a1',
            apiKey: '$2a$10$8vF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4qF4',
            baseUrl: 'https://api.jsonbin.io/v3/b/'
        };

        // Save scores to cloud storage
        async function saveToCloud() {
            try {
                const response = await fetch(`${CLOUD_STORAGE.baseUrl}${CLOUD_STORAGE.binId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Master-Key': CLOUD_STORAGE.apiKey
                    },
                    body: JSON.stringify({
                        scores: scores,
                        lastUpdated: new Date().toISOString(),
                        version: Date.now()
                    })
                });
                
                if (response.ok) {
                    console.log('Successfully saved to cloud storage');
                    return true;
                } else {
                    console.error('Failed to save to cloud storage');
                    return false;
                }
            } catch (error) {
                console.error('Error saving to cloud storage:', error);
                return false;
            }
        }

        // Load scores from cloud storage
        async function loadFromCloud() {
            try {
                const response = await fetch(`${CLOUD_STORAGE.baseUrl}${CLOUD_STORAGE.binId}/latest`, {
                    method: 'GET',
                    headers: {
                        'X-Master-Key': CLOUD_STORAGE.apiKey
                    }
                });
                
                if (response.ok) {
                    const data = await response.json();
                    if (data.record && data.record.scores) {
                        scores = data.record.scores;
                        console.log('Successfully loaded from cloud storage');
                        return true;
                    }
                }
                return false;
            } catch (error) {
                console.error('Error loading from cloud storage:', error);
                return false;
            }
        }

        // Sync to Google Sheets
        async function syncToGoogleSheets() {
            const teams = getTeamsData();
            const webAppUrl = 'https://script.google.com/macros/s/AKfycbxcdTk5FZIX4ol_DE1fxemiMtd_zq6Q6ge6ZDl0OhoOYpip1f8VnX8ABC-ynyNfX3VqFg/exec';
            
            try {
                console.log('Syncing data to Google Sheets...', teams);
                
                const response = await fetch(webAppUrl, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: {
                        'Content-Type': 'text/plain',
                    },
                    body: JSON.stringify(teams)
                });
                
                console.log('Successfully synced to Google Sheets');
                return true;
                
            } catch (error) {
                console.error('Error syncing to Google Sheets:', error);
                return false;
            }
        }

        // User credentials
        const users = {
            'admin': { password: 'admin', role: 'admin' },
            'pospbb': { password: '12345', role: 'pos', pos: 'pbb', title: 'Pos PBB' },
            'posemponempon': { password: '12345', role: 'pos', pos: 'emponempon', title: 'Pos Empon-empon' },
            'possejarah': { password: '12345', role: 'pos', pos: 'sejarah', title: 'Pos Sejarah' },
            'pospengetahuan': { password: '12345', role: 'pos', pos: 'pengetahuan', title: 'Pos Pengetahuan Umum' },
            'posmakam': { password: '12345', role: 'pos', pos: 'makam', title: 'Pos Makam' },
            'posoutbond': { password: '12345', role: 'pos', pos: 'outbond', title: 'Pos Outbond' },
            'posinduk': { password: '12345', role: 'pos', pos: 'posinduk', title: 'Pos Induk' }
        };

        let currentUser = null;
        let publicChart = null;
        let adminChart = null;
        let posChart = null;

        // Initialize the application
        async function init() {
            await loadScores();
            updateStandings();
            createChart('scoresChart', 'publicChart');
        }

        // Show login form
        function showLogin() {
            document.getElementById('loginSection').classList.remove('hidden');
            document.getElementById('publicDashboard').classList.add('hidden');
        }

        // Hide login form
        function hideLogin() {
            document.getElementById('loginSection').classList.add('hidden');
            document.getElementById('loginError').classList.add('hidden');
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
        }

        // Handle login
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (users[username] && users[username].password === password) {
                currentUser = { username, ...users[username] };
                hideLogin();
                
                if (currentUser.role === 'admin') {
                    showAdminDashboard();
                } else {
                    showPosDashboard();
                }
            } else {
                document.getElementById('loginError').textContent = 'Username atau password salah!';
                document.getElementById('loginError').classList.remove('hidden');
            }
        });

        // Show admin dashboard
        function showAdminDashboard() {
            document.getElementById('publicDashboard').classList.add('hidden');
            document.getElementById('adminDashboard').classList.remove('hidden');
            updateStandings();
            createChart('adminScoresChart', 'adminChart');
        }

        // Show pos dashboard
        function showPosDashboard() {
            document.getElementById('publicDashboard').classList.add('hidden');
            document.getElementById('posDashboard').classList.remove('hidden');
            document.getElementById('posTitle').textContent = `Dashboard ${currentUser.title}`;
            loadPosScores();
        }

        // Load current scores for pos
        function loadPosScores() {
            const posScores = scores[currentUser.pos];
            for (let i = 0; i < 6; i++) {
                document.getElementById(`score${i + 1}`).value = posScores[i];
            }
        }

        // Save scores from pos
        async function saveScores() {
            const posScores = [];
            let hasError = false;

            for (let i = 1; i <= 6; i++) {
                const scoreInput = document.getElementById(`score${i}`);
                const score = parseInt(scoreInput.value) || 0;
                
                if (score < 0 || score > 1000) {
                    alert(`Skor Tim ${i} harus antara 0-1000!`);
                    hasError = true;
                    break;
                }
                posScores.push(score);
            }

            if (!hasError) {
                scores[currentUser.pos] = posScores;
                saveScoresToStorage();
                
                // Show saving message
                const saveButton = document.querySelector('button[onclick="saveScores()"]');
                const originalText = saveButton.textContent;
                saveButton.textContent = 'Menyimpan...';
                saveButton.disabled = true;
                
                // Sync to Google Sheets
                const syncSuccess = await syncToGoogleSheets();
                
                // Show success message
                document.getElementById('saveSuccess').classList.remove('hidden');
                if (syncSuccess) {
                    document.getElementById('saveSuccess').innerHTML = 'Skor berhasil disimpan ke cloud dan Google Sheets! <a href="https://docs.google.com/spreadsheets/d/1e-Y0ckHjVF04la-I4e0j-WgR10KXKMxZKI2ox__5fWs/edit?usp=sharing" target="_blank" class="text-blue-600 underline">Lihat Spreadsheet</a>';
                } else {
                    document.getElementById('saveSuccess').textContent = 'Skor berhasil disimpan ke cloud! (Sinkronisasi ke Google Sheets gagal)';
                }
                
                // Reset button
                saveButton.textContent = originalText;
                saveButton.disabled = false;
                
                setTimeout(() => {
                    document.getElementById('saveSuccess').classList.add('hidden');
                }, 5000);
            }
        }

        // View results from pos dashboard
        function viewResults() {
            updateStandings();
            document.getElementById('posResults').classList.remove('hidden');
            updatePosStandings();
            createChart('posScoresChart', 'posChart');
        }

        // Update standings table
        function updateStandings() {
            const teams = [];
            
            for (let i = 0; i < 6; i++) {
                const total = scores.pbb[i] + scores.emponempon[i] + scores.sejarah[i] + 
                             scores.pengetahuan[i] + scores.makam[i] + scores.outbond[i] + scores.posinduk[i];
                
                teams.push({
                    team: i + 1,
                    pbb: scores.pbb[i],
                    emponempon: scores.emponempon[i],
                    sejarah: scores.sejarah[i],
                    pengetahuan: scores.pengetahuan[i],
                    makam: scores.makam[i],
                    outbond: scores.outbond[i],
                    posinduk: scores.posinduk[i],
                    total: total
                });
            }

            // Sort by total score (descending)
            teams.sort((a, b) => b.total - a.total);

            // Update podium
            updatePodium(teams);
            
            // Update category rankings
            updateCategoryRankings();
            
            // Update statistics
            updateCompetitionStats(teams);

            // Update public standings
            updateStandingsTable('standingsTable', teams);
            
            // Update admin standings if visible
            if (!document.getElementById('adminDashboard').classList.contains('hidden')) {
                updateStandingsTable('adminStandingsTable', teams);
            }

            // Update pos standings if visible
            if (!document.getElementById('posResults').classList.contains('hidden')) {
                updateStandingsTable('posStandingsTable', teams);
            }

            // Update charts
            updateCharts(teams);
        }

        // Update podium display
        function updatePodium(teams) {
            const podium = document.getElementById('podium');
            if (!podium) return;
            
            const top3 = teams.slice(0, 3);
            
            podium.innerHTML = `
                <div class="flex justify-center items-end space-x-4 mb-6">
                    <!-- 2nd Place -->
                    <div class="text-center">
                        <div class="bg-gray-300 rounded-lg p-4 h-24 flex items-center justify-center mb-2">
                            <div class="text-center">
                                <div class="text-2xl">ü•à</div>
